<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/category_item_card"
        android:layout_width="71dp"
        android:layout_height="71dp"
        android:layout_marginStart="@dimen/margin_20"
        android:clickable="true"
        android:elevation="1dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/phone_image"
            android:src="@drawable/ic_phone_icon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/mark_pro_medium"
        android:text="@string/phones_category"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="@+id/category_item_card"
        app:layout_constraintStart_toStartOf="@+id/category_item_card"
        app:layout_constraintTop_toBottomOf="@+id/category_item_card" />
</androidx.constraintlayout.widget.ConstraintLayout>